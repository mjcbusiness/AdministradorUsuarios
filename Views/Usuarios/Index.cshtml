@model IEnumerable<AdministradorUsuarios.Domain.Usuario>

<div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center gap-2">
        <a class="btn btn-outline-secondary btn-sm" asp-controller="Acceso" asp-action="Index" title="Cambiar rol">
            ← Volver
        </a>
    </div>
    <div>
        <h2 class="mb-0">Usuarios</h2>
        <div class="text-muted">Rol actual: <strong>@ViewBag.CurrentRole</strong></div>
    </div>
    @if ((string)ViewBag.CurrentRole == "Administrador"){
        <a class="btn btn-primary" asp-action="Create">
            + Crear Usuario
        </a>
    }else{
        <span class="d-inline-block" tabindex="0"
          data-bs-toggle="tooltip"
          data-bs-placement="top"
          title="No podés Crear un nuevo Usuario: necesitás rol Administrador.">
        <button class="btn btn-sm btn-outline-primary" type="button" disabled>
            + Crear Usuario
        </button>
    </span>
    }
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Documento</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No hay usuarios para mostrar.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.Nombre</td>
                                <td>@u.Apellido</td>
                                <td>@u.Documento</td>
                                <td>@u.Email</td>
                                <td>@u.Rol</td>
                                <td class="text-end">
                                    @if ((string)ViewBag.CurrentRole == "Administrador")
                                    {
                                            <a class="btn btn-sm btn-outline-secondary"
                                               asp-action="Edit" asp-route-id="@u.Id">
                                                Editar
                                            </a>

                                            <button class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-userid="@u.Id"
                                                    data-username="@($"{u.Apellido}, {u.Nombre}")">
                                                Eliminar
                                            </button>
                                    }
                                    else
                                    {
                                        <span class="d-inline-block" tabindex="0"
                                              data-bs-toggle="tooltip"
                                              data-bs-placement="top"
                                              title="No podés editar: necesitás rol Administrador.">
                                            <button class="btn btn-sm btn-outline-secondary" type="button" disabled>
                                                Editar
                                            </button>
                                        </span>

                                        <span class="d-inline-block" tabindex="0"
                                              data-bs-toggle="tooltip"
                                              data-bs-placement="top"
                                              title="No podés eliminar: necesitás rol Administrador.">
                                            <button class="btn btn-sm btn-outline-danger" type="button" disabled>
                                                Eliminar
                                            </button>
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                ¿Eliminar a <strong id="deleteUserName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                <form method="post" asp-action="Delete">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const modal = document.getElementById('deleteModal');
    modal.addEventListener('show.bs.modal', event => {
        const btn = event.relatedTarget;
        document.getElementById('deleteUserId').value = btn.getAttribute('data-userid');
        document.getElementById('deleteUserName').textContent = btn.getAttribute('data-username');
    });
</script>
